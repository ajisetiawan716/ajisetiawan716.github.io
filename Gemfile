  gem "jekyll-feed", "~> 0.6"
  gem "jekyll-sitemap"
  gem "jemoji"
  gem "jekyll-tagging-related_posts"
  gem 'jekyll-paginate', '~> 1.1'
  gem 'mini_magick'
  gem "kramdown-parser-gfm"
  gem 'fastimage'
  gem 'jekyll-seo-tag'
  gem 'jekyll-github-metadata'
  gem 'sassc', '~> 2.4'
end
